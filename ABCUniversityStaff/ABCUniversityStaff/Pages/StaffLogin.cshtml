@page
@model ABCUniversityStaff.Pages.StaffLoginModel

<h1>LOGIN</h1>

<h4>ABCUniversity-Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (Model.ErrorMsg.Length > 0)
            {

                <div class="alert alert-danger" role="alert">
                    @Model.ErrorMsg
                </div>

            }
            <div class="form-group">
                <label asp-for="staff1.StaffUserName" class="control-label"></label>
                <input asp-for="staff1.StaffUserName" class="form-control" />
                <span asp-validation-for="staff1.StaffUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="staff1.StaffPassword" class="control-label"></label>
                <input asp-for="staff1.StaffPassword" class="form-control" />
                <span asp-validation-for="staff1.StaffPassword" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
