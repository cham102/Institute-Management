        color: white;
        padding: 3px 7px;
        text-align: center;
        border-radius: 5px;
    }
</style>

<div class="container">
@* <h1>Details</h1> *@
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><b>Student</b></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

<div>
    @* <h4>student</h4> *@
    <hr />

    <dl class="row">

            <div class="row">
                <dt class="col-sm-2 lblColour">
