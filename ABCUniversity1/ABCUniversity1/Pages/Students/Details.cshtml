                    @Html.DisplayNameFor(model => model.student.FirstName)&nbsp;/
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(model => model.student.FirstName)
                </dd>

                <dt class="col-sm-2 lblColour">
                    @Html.DisplayNameFor(model => model.student.LastName)&nbsp;/
