                    @Html.DisplayNameFor(model => model.student.Address)&nbsp;/
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(model => model.student.Address)
                </dd>
                <dt class="col-sm-2 lblColour">
                    @Html.DisplayNameFor(model => model.student.ContactNo)&nbsp;/
